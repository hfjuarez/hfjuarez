<style lang="scss" is:global>
	@import '@/styles/colors.scss';
	@import '@/styles/spaces.scss';
	@import '@/styles/fonts.scss';
	html {
		font-family: system-ui, sans-serif;
		background-color: $backgroundColor;
	}
	body {
		margin: 0;
		background-color: #fffdf9;
		/* scrollbar-width: none;
		-ms-overflow-style: none; */
		&::-webkit-scrollbar {
			/* display: none; */
		}
	}
	* {
		box-sizing: border-box;
		/*  &::-webkit-scrollbar {
		 	display: none;
		 }
		-ms-overflow-style: none;
		 scrollbar-width: none; 
		 */
		a,
		button:focus {
			outline-color: #0078f1;
		}
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		@extend .eb-garamond;
		margin: 0;
	}
	h1 {
		font-size: 8.5rem;
		line-height: 8.5rem;
		@media screen and (max-width: $screen-mobile) {
			font-size: 6rem;
			line-height: 6rem;
		}
	}
	p {
		@extend .jetbrains;
		font-size: 1rem;
		line-height: 1.5rem;
		margin: 0;
		@media screen and (max-width: $screen-mobile) {
			font-size: 0.9375rem;
			line-height: 1.40625rem;
		}
	}
	a {
		@extend .jetbrains;
		&:hover {
			color: $blue;
		}
		&:focus-visible,
		&:focus {
			color: $blue;
			outline: 0.125rem dashed $blue;
			border-radius: 0.125rem;
			outline-offset: 0.1875rem;
		}
		&:active {
			color: darken($blue, 10%);
			outline-color: darken($blue, 10%);
		}
	}

	// Helper classes
	.is-uppercase {
		text-transform: uppercase;
	}
	.p-label {
		@extend .is-uppercase;
		color: $blue;
		margin-bottom: 0.5625rem;
		font-size: 0.875rem;
		line-height: 0.875rem;
	}
</style>
