---
import Navbar from '@/components/commons/Navbar.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="
					Software Engineer
				" />
		<meta name="author" content="HernÃ¡n Fabrica / @hfjuarez" />
		<meta name="keywords" content="developer, full stack" />
		<meta
			name="theme-color"
			content="#fffdf9"
			media="(prefers-color-scheme: light)"
		/>
		<meta
			name="theme-color"
			content="#fffdf9"
			media="(prefers-color-scheme: dark)"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
			rel="stylesheet"
		/>
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	@import '@/styles/colors.scss';
	@import '@/styles/spaces.scss';
	@import '@/styles/fonts.scss';
	html {
		@extend .jetbrains;
		scroll-behavior: smooth;
		background-color: $backgroundColor;
	}
	body {
		margin: 0;
		background-color: $backgroundColor;
		scrollbar-width: none;
		-ms-overflow-style: none;
		&::-webkit-scrollbar {
			display: none;
		}
	}
	* {
		box-sizing: border-box;
		&::-webkit-scrollbar {
			display: none;
		}
		-ms-overflow-style: none;
		scrollbar-width: none;

		a,
		button:focus {
			outline-color: $blue;
		}
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		@extend .eb-garamond;
		color: $strongForegroundColor;
		margin: 0;
	}
	h1,
	.section-title {
		font-size: 8.5rem;
		line-height: 8.5rem;
		&.invert-color {
			color: $strongBackgroundColor;
		}
	}
	p {
		color: $foregroundColor;
		font-size: 1rem;
		line-height: 1.5rem;
		margin: 0;
	}
	a {
		color: $foregroundColor;
		&.invert-color {
			color: $backgroundColor;
		}

		&:hover {
			color: $blue;
		}
		&:focus-visible,
		&:focus {
			color: $blue;
			outline: 0.125rem dashed $blue;
			border-radius: 0.125rem;
			outline-offset: 0.1875rem;
		}
		&:active {
			color: darken($blue, 10%);
			outline-color: darken($blue, 10%);
		}
	}

	// Helper classes
	.is-uppercase {
		text-transform: uppercase;
	}
	.underline {
		border-bottom: 0.125rem solid $blue;
	}
	.p-label {
		@extend .is-uppercase;
		color: $blue;
		margin-bottom: 0.5625rem;
		font-size: 0.875rem;
		line-height: 0.875rem;
	}

	@media screen and (min-width: $screen-desktop-xl) {
		h1,
		.section-title {
			font-size: 14rem;
			line-height: 13rem;
		}
		p {
			font-size: 1.125rem;
			line-height: 1.75rem;
		}
		.p-label {
			font-size: 1rem;
			line-height: 1;
		}
	}
	@media screen and (max-width: $screen-mobile) {
		h1,
		.section-title {
			font-size: 5rem;
			line-height: 5rem;
		}
		p {
			font-size: 0.9375rem;
			line-height: 1.40625rem;
		}
	}
</style>
